<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/topLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/keypadLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />

    <TextView
        android:id="@+id/tvCalc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="15dp"
        android:background="@null"
        android:gravity="end"
        android:text=""
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPreview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="end"
        android:textColor="#aaaaaa"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/btnDelete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/viewSeparate"
        android:layout_margin="20dp"
        android:background="@drawable/delete"/>

    <View
        android:id="@+id/viewSeparate"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa"
        app:layout_constraintTop_toBottomOf="@+id/topLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        />

    <TableLayout
        android:id="@+id/keypadLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="15dp"
        android:paddingTop="21dp"
        android:paddingEnd="15dp"
        android:paddingBottom="21dp"
        android:shrinkColumns="*"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLayout"
        app:layout_constraintVertical_weight="2">

        <TableRow
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/btnClear"
                android:text="C"
                android:textSize="24sp"
                android:textColor="#E53935"
                android:background="@drawable/btn_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />

            <Button
                android:id="@+id/btnBracket"
                android:text="( )"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:background="@drawable/btn_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"

                />

            <Button
                android:id="@+id/btnPercent"
                android:text="%"
                android:textColor="@color/green"
                android:textSize="30sp"
                android:background="@drawable/btn_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"

                />
            <Button
                android:id="@+id/btnDiv"
                android:text="รท"
                android:textColor="@color/green"
                android:textSize="30sp"
                android:background="@drawable/btn_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />
        </TableRow>

        <TableRow android:layout_weight="1">
            <Button
                android:id="@+id/btn7"
                android:text="7"
                android:textSize="24sp"
                android:background="@drawable/btn_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />

            <Button
                android:id="@+id/btn8"
                android:text="8"
                android:textSize="24sp"
                android:background="@drawable/btn_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />

            <Button
                android:id="@+id/btn9"
                android:text="9"
                android:textSize="24sp"
                android:background="@drawable/btn_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"

                />
            <Button
                android:id="@+id/btnMul"
                android:text="ร"
                android:textColor="@color/green"
                android:textSize="30sp"
                android:background="@drawable/btn_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />

        </TableRow>

        <TableRow android:layout_weight="1">
            <Button
                android:id="@+id/btn4"
                android:textSize="24sp"
                android:text="4"
                android:background="@drawable/btn_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"

                />

            <Button
                android:id="@+id/btn5"
                android:text="5"
                android:textSize="24sp"
                android:background="@drawable/btn_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"

                />

            <Button
                android:id="@+id/btn6"
                android:text="6"
                android:textSize="24sp"
                android:background="@drawable/btn_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />
            <Button
                android:id="@+id/btnMinus"
                android:text="-"
                android:textColor="@color/green"
                android:textSize="30sp"
                android:background="@drawable/btn_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />

        </TableRow>

        <TableRow android:layout_weight="1">
            <Button
                android:id="@+id/btn1"
                android:text="1"
                android:textSize="24sp"
                android:background="@drawable/btn_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"

                />

            <Button
                android:id="@+id/btn2"
                android:text="2"
                android:textSize="24sp"
                android:background="@drawable/btn_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"

                />

            <Button
                android:id="@+id/btn3"
                android:text="3"
                android:textSize="24sp"
                android:background="@drawable/btn_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"

                />
            <Button
                android:id="@+id/btnPlus"
                android:text="+"
                android:textSize="30sp"
                android:textColor="@color/green"
                android:background="@drawable/btn_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />


        </TableRow>

        <TableRow android:layout_weight="1">
            <Button
                android:id="@+id/btnReverse"
                android:text="+/-"
                android:textSize="30sp"
                android:background="@drawable/btn_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"

                />

            <Button
                android:id="@+id/btn0"
                android:text="0"
                android:textSize="24sp"
                android:background="@drawable/btn_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />

            <Button
                android:id="@+id/btnDot"
                android:text="."
                android:textSize="30sp"
                android:background="@drawable/btn_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />
            <Button
                android:id="@+id/btnResult"
                android:text="="
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@drawable/btn_result_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>